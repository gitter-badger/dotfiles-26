[include]
	path = ~/.gitconfig.local
[core]
	autocrlf = false
	safecrlf = true
	editor = vim
	quotepath = false
[alias]
	graph = log --graph --date=short --pretty=\"format:%C(yellow)%h %C(cyan)%ad %C(green)%an%Creset%x09%s %C(red)%d%Creset\"
[push]
	default=simple
[diff]
	guitool = gvimdiff
	noprefix = true
[difftool.gvimdiff]
	cmd = gvim -d $LOCAL $REMOTE
